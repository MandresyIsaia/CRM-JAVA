@model List<MonProjetMVC.Models.Budget>

@{
    ViewData["Title"] = "Budgets";
}

<h1>@ViewData["Title"]</h1>

@if (Model == null || !Model.Any())
{
    <p>Aucun budget trouv√©.</p>
}
else
{
    <div>
        <h2>Liste des Budgets</h2>
        <table class="table">
            <tr>
                <th>ID</th>
                <th>Valeur</th>
                <th>Client</th>
            </tr>
            @foreach (var budget in Model)
            {
                <tr>
                    <td>@budget.id</td>
                    <td>@budget.valeur</td>
                    <td>@(budget.customer != null ? budget.customer.name : "Aucun client")</td>
                </tr>
            }
        </table>
    </div>
}
